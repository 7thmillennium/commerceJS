<div class="container">
    <div>
        <h1>
            Read Entry
        </h1>
    </div>
        {{#each items}}
            <div>
                <div class="col-sm">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="{{this.name}}" readonly>
                <label for="info">Info</label>
                <textarea name="info" id="info" cols="30" rows="10" readonly>{{this.info}}</textarea>
                <label for="category">Type</label>
                <input type="text" name="type" id="type" value="{{this.type}}" readonly>
                <label for="category">Category</label>
                <input type="text" name="category" id="category" value="{{this.category}}" readonly>
                <label for="price">Price</label>
                <input type="number" name="price" id="price" value="{{this.price}}" readonly>
                <label for="social_link">Facebook link</label>
                <input type="text" name="social_link" id="social_link" value="{{this.social_link}}" readonly>
                </div>
            </div>
            <br>
            <hr>
        {{/each}}
</div>
<br>